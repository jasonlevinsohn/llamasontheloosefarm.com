extends layout

include _includes/sharedHTMLfunctions

block content
    .row.page-header
        .col-lg-12
            h1= title 
    .row
        .col-xs-12.col-md-9
            .row
                .col-xs-12.col-sm-6
                    p.rating
                        +outputRating(info.rating)
                    p= info.address
                    .panel.panel-primary
                        .panel-heading
                            h2.panel-title Opening Hours
                        .panel-body
                            each hour in info.openingHours
                                p= hour
                    .panel.panel-primary
                        .panel-heading
                            h2.panel-title Facilities
                        .panel-body
                            each facility in info.facilities
                                span.label.label-warning
                                    span.glyphicon.glyphicon-ok
                                    | &nbsp;#{facility}
                                | &nbsp;
                .col-xs-12.col-sm-6.location-map
                    .panel.panel-primary
                        .panel-heading
                            h2.panel-title Location map
                        .panel-body
                            img.img-responsive.img-rounded(src='http://maps.googleapis.com/maps/api/staticmap?center=#{info.map.lat},#{info.map.long}&zoom=17&size=400x350&sensor=false&markers=#{info.map.lat},#{info.map.long}&scale=2')
            .row
                .col-xs-12
                    .panel.panel-primary.review-panel
                        .panel-heading
                            a.btn.btn-default.pull-right(href='/location/review/new') Add review
                            h2.panel-title Customer reviews
                        .panel-body.review-container
                            each review in info.reviews
                                .row
                                    .review
                                        .well.well-sm.review-header
                                            span.rating
                                                +outputRating(review.rating)
                                            span.review-author= review.name 
                                            small.review-timestamp= review.timestamp 
                                        .col-xs-12
                                            p= review.review 
        .col-xs-12.col-md-3
            p.lead
                | Starcups is on Loc8r because it has accessible wifi and space to sit down with your laptop and get some work done.
            p
                | If you've been and you like it - or if you don't - please leave a review to help other people just like you.